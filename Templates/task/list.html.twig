{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
   <div class="btn_create_task row">
       <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
   </div>

    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4 bloc-task">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="pull-right">
                        {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}<span class="glyphicon glyphicon-remove"></span>{% endif %}
                    </h4>
                    <h4>{{ task.title }}</h4>
                    <p>{{ task.content }}</p>
                    <a href="{{ path('task_edit', {'id' : task.id }) }}">Modifier cette tâche</a>
                </div>
                <div>
                    <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                        <button class="btn btn-success btn-sm pull-right" type="button">
                            {% if task.isDone %}Tâche faite{% else %}Tâche non terminée{% endif %}
                        </button>
                    </form>
                    {% if user == task.user %}
                        <a class="btn btn-danger btn-sm pull-right" href="{{ path('task_delete', {'id' : task.id }) }}" id="delete_button_{{ task.id }}">Supprimer</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right" >Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
